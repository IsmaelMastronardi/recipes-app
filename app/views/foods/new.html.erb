<h1>New food</h1>

<%= form_with model: @food, url: foods_path(), method: :post  do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <div class="field">
    <%= f.label :measurement_unit %><br />
    <%= f.text_field :measurement_unit, autofocus: true, autocomplete: "measurement_unit" %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field  :price, autofocus: true, autocomplete: "price" %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br />
    <%= f.number_field  :quantity, autofocus: true, autocomplete: "quantity" %>
  </div>
  <div class="actions">
    <%= f.submit "create" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to foods", foods_path %>
</div>
