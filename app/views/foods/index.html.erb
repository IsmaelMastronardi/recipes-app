<p style="color: green"><%= notice %></p>
<%= link_to "Add food", new_food_path %>
<table class="table">
  <thead>
    <tr>
        <th>Measurement Unit</th>
        <th>Unit Price</th>
        <th>Action</th>
    </tr>
</thead>
<tbody>
  <% @foods.each do |food| %>
    <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= "$#{food.price}" %></td>
        <td><%= button_to "Delete", food, method: :delete,
            data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</tbody>
</table>