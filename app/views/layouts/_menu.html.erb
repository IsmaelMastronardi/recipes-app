<header class="flex flex-col text-gray-600 body-font">
  <div class="container pb-10 mx-auto flex flex-wrap flex-col md:flex-row items-center">
    <nav class="md:ml-auto md:mr-auto flex flex-wrap items-center text-base justify-center">
      <a class="mr-5 hover:text-gray-900">
        <%= link_to 'Foods',  foods_path(current_user) %>
      </a>
      <a class="mr-5 hover:text-gray-900">
        <%= link_to 'Recipes',  recipes_path(current_user) %>
      </a>
      <a class="mr-5 hover:text-gray-900">
        <%= link_to 'Public Recipes',  recipes_path(current_user) %>
      </a>
      <% if user_signed_in? %>
        <a class="mr-5 hover:text-gray-900">
          <%= link_to 'Shopping List',  general_shopping_list_user_path(current_user) %>
        </a>
        <%= button_to(
          "Log Out",
          destroy_user_session_path,
          method: :delete,
          class: "focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900 ml-5"
        ) %>
      <% end %>
    </nav>
  </div>
</header>