<div class="flex flex-col w-full mb-12">
  <div class="mx-auto mb-10">
    <p class="text-3xl">Recipes</p>
  </div>
  <p style="color: green"><%= notice %></p>

  <% @recipes.each do |recipe| %>
    <% if recipe.public %>
      <%= link_to recipe_path(recipe) do %>
        <div class="p-4 w-full">
          <div class="flex rounded-lg h-full bg-gray-100 p-8 w-1/2 mx-auto flex-row text-center justify-center items-center">
            <div class="mr-10">
              <h2 class="text-gray-900 text-xl title-font font-medium"><%= recipe.name %></h2>
              <h3 class="text-gray-900 text-xl title-font font-medium">By <%= recipe.user.name %></h3>
            </div>
            <div class="ml-10">
              <h1>Total food items: <%= recipe.food_recipes.count %></h1>
              <% sum = 0 %>
              <% recipe.food_recipes.each do |food_recipe| %>
                <% food_price = (food_recipe.food.price) * (food_recipe.quantity) %>
                <% sum += food_price.to_i if food_price.present? %>
              <% end %>
              <h1>Total Price: $<%= sum %></h1>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
